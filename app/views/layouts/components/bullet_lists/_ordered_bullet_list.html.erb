<ol class="govuk-list govuk-list--number<%= " dfe-list__large-numbers" if large_numbers %>">
  <% items.each do |item| %>
    <% case item[:type] %>
    <% when :paragraph %>
      <li class="<%= " dfe-list__large-numbers-item" if large_numbers %>"><%= item[:data][:text] %></li>
    <% when :bullet_list %>
      <%= render 'layouts/renderers/bullet_list_renderer', bullet_list: item[:data] %>
    <% when :rich_text %>
      <li class="<%= " dfe-list__large-numbers-item" if large_numbers %>">
        <div class="dfe-list__item">
          <%= render inline: item[:data][:html_content] %>
        </div>
      </li>
    <% end %>
  <% end %>
</ol>
