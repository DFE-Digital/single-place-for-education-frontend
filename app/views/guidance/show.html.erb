<% content_for :title, @guidance[:title] %>

<div class="govuk-width-container">
  <main class="govuk-main-wrapper" id="main-content" role="main">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <%= render 'layouts/components/links/breadcrumbs', breadcrumbs: @guidance[:breadcrumbs], current_page_title: @guidance[:title] %>
      </div>
    </div>
    <div class="govuk-grid-row govuk-!-padding-top-9 govuk-!-padding-bottom-5">
      <div class="govuk-grid-column-full">
        <%= render 'layouts/components/headings/one', text: @guidance[:title] %>
        <%= render 'layouts/components/small', text: @guidance[:last_updated].strftime("Last updated on %A %d %B %Y") %>
      </div>
    </div>
    <div class="govuk-grid-row govuk-!-padding-top-9 govuk-!-padding-bottom-5">
      <div class="govuk-grid-column-full">
        <%= render 'layouts/renderers/component_renderer', contents: @guidance[:content] %>
      </div>
    </div>
  </main>
  <%= render 'layouts/bottom_nav' %>
</div>
