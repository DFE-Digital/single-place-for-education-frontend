          <%= render 'layouts/components/link', text: 'Yet another link' %>
        </div>
        <div class="govuk-grid-row">
          <%= render 'layouts/components/full_bleed_image', alt_text: 'example image', image_src: asset_url('full-width-example.png') %>
        </div>
        <div class="govuk-grid-row width-s padding-top-m">
          <%= render 'layouts/components/testimonial', testimonial: { heading: { text: 'Testimonials', level: :heading_three, bold: true }, before_quote: { text: 'Example said of Example Two and the role she plays in his school:'}, quote: { text: 'This is an example quote. Quote quote quote quote quote quote quote quote quote quote quote quote quote quote quote quote quote quote quote quote quote quote quote quote quote quote quote quote quote quote quote quote.' }, author: { text: 'Headteacher, Example' } } %>
        </div>
      </div>
    </div>
  </main>
</div>
