        <div class="govuk-grid-column-one-half">
          <%= render 'layouts/components/image_link_with_description', image_src: asset_url('person-with-glasses-behind-glass.jpg'), link: '/in-development', description: "<p class='govuk-body'><a href='/in-development' class='govuk-link'>Continuous professional development (CPD)</a></p><p class='govuk-body'>Access a range of professional development options for teachers, regardless of their level of experience or training or school subject.</p>", link_type: :internal %>
        </div>
        <div class="govuk-grid-column-one-half">
          <%= render 'layouts/components/image_link_with_description', image_src: asset_url('person-in-chair.jpg'), link: 'https://www.gov.uk/government/publications/national-professional-qualifications-frameworks', description: "<p class='govuk-body'><a href='/in-development' class='govuk-link'>National professional qualification (NPQs)</a></p><p class='govuk-body'>Gain a qualification that gives you national recognition of your leadership development and professional achievement within a school setting.</p>", link_type: :external %>
        </div>
      </div>
    </div>

    <div class="govuk-grid-row govuk-!-padding-top-9">
      <div class="govuk-grid-column-full">
        <%= render 'layouts/components/headings/two', text: 'Find and advertise a job' %>
